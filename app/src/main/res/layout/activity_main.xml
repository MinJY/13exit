<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_background"
    tools:context="${relativePackage}.${activityClass}">

    <kr.ac.nexters.knock.tools.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/main_partnerRoom"
        app:rb_color="#fffdfe"
        app:rb_radius="32dp"
        app:rb_rippleAmount="3"
        app:rb_duration="3000"
        app:rb_scale="3">


        <kr.ac.nexters.knock.tools.ImageViewRounded
            android:id="@+id/main_partnerImg"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"/>

    </kr.ac.nexters.knock.tools.RippleBackground>



    <kr.ac.nexters.knock.tools.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:rb_color="#fffdfe"
        app:rb_radius="50dp"
        app:rb_rippleAmount="3"
        app:rb_duration="3000"
        app:rb_scale="3">

        <ImageButton
            android:id="@+id/main_btn_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/btn_heart"/>

    </kr.ac.nexters.knock.tools.RippleBackground>



    <kr.ac.nexters.knock.tools.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main_myRoom"
        android:gravity="center"
        app:rb_color="#fffdfe"
        app:rb_radius="32dp"
        app:rb_rippleAmount="3"
        app:rb_duration="3000"
        app:rb_scale="3">


        <kr.ac.nexters.knock.tools.ImageViewRounded
            android:id="@+id/main_myImg"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"/>

    </kr.ac.nexters.knock.tools.RippleBackground>


</LinearLayout>