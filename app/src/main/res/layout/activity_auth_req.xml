<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="264dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/bg_popup_background"
    tools:context="kr.ac.nexters.knock.dialog.AuthReqActivity">


    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <ImageView
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@mipmap/bg_popup_circle"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#f48967"
        android:id="@+id/authReq_tv" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/btn_accept"
            android:id="@+id/authReq_btn_accept"/>


    </LinearLayout>


</LinearLayout>
