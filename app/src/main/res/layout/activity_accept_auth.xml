<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="264dp"
    android:layout_height="210dp"
    android:orientation="vertical"
    android:background="@mipmap/bg_popup_background"
    tools:context="kr.ac.nexters.knock.dialog.AcceptAuthActivity">



    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@mipmap/bg_popup_circle"
            android:layout_marginTop="17dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="인증이 완료되었습니다."
            android:textColor="#f48967"
            android:id="@+id/authReq_tv" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/btn_ok"
            android:id="@+id/auth_btn_accept"/>


    </LinearLayout>

</LinearLayout>
